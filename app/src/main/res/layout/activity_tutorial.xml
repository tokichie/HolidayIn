<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView_tutorialholidayin"
                android:src="@drawable/holidayin"
                android:layout_marginBottom="-80dp"
                android:layout_marginTop="-30dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="とは、"
                android:textSize="20sp"
                android:id="@+id/textView"

                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="あなたの気分や予定によって"
                android:id="@+id/textView3"
                android:textSize="20sp"

                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="お出かけのプランを"
                android:id="@+id/textView4"
                android:textSize="20sp"

                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提案してくれるアプリです。"
                android:id="@+id/textView5"
                android:textSize="20sp"

                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:text="@string/no_login"
                android:id="@+id/button_tutorial"
                android:layout_gravity="center_horizontal"
                android:layout_above="@id/button_tutorial"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/button_round"
                android:textColor="#ffffff"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="40dp" />


        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
