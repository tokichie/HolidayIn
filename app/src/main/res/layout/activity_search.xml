<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical">
    <!--android:background="#53A8B7"-->

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_keyword"
        android:hint="@string/keyword_hint"
        android:inputType="text"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="所要時間"
        android:id="@+id/textView"
        android:textColor="#223546"
        android:textSize="@dimen/activity_horizontal_margin"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/radioGroup_requiredTime"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="2dp">

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="ほんの少し"
            android:button="@null"
            android:drawableTop="@drawable/walkpeople"
            android:background="@drawable/radio_button"
            android:layout_weight="1"
            android:checked="true"
            android:gravity="center_horizontal|bottom"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="1dp" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="軽めに"
            android:button="@null"
            android:drawableTop="@drawable/bicycle"
            android:background="@drawable/radio_button"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="がっつり"
            android:button="@null"
            android:drawableTop="@drawable/car"
            android:background="@drawable/radio_button"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="2dp" />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="移動時間"
        android:id="@+id/textView3"
        android:textColor="#223546"
        android:textSize="@dimen/activity_horizontal_margin"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:focusableInTouchMode="false"
        android:id="@+id/radioGroup_movingTime">

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/slow"
            android:button="@null"
            android:background="@drawable/radio_button"
            android:text="近場で"
            android:layout_weight="1"
            android:checked="true"
            android:gravity="center_horizontal|bottom"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="1dp" />

        <RadioButton
            android:id="@+id/radioButton5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ほどほど"
            android:button="@null"
            android:drawableTop="@drawable/little_fast"
            android:background="@drawable/radio_button"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp" />

        <RadioButton
            android:id="@+id/radioButton6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="遠出したい"
            android:button="@null"
            android:drawableTop="@drawable/fast"
            android:background="@drawable/radio_button"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="2dp" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今日の気分"
        android:id="@+id/textView4"
        android:textColor="#223546"
        android:textSize="@dimen/activity_horizontal_margin"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/radioGroup_mood">

        <RadioButton
            android:id="@+id/radioButton7"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="優雅に"
            android:button="@null"
            android:drawableTop="@drawable/dress"
            android:background="@drawable/radio_button"
            android:layout_weight="1"
            android:checked="true"
            android:gravity="center_horizontal|bottom"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="0.5dp" />

        <RadioButton
            android:id="@+id/radioButton8"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="楽しく"
            android:button="@null"
            android:drawableTop="@drawable/enjoy"
            android:background="@drawable/radio_button"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:layout_marginLeft="0.5dp"
            android:layout_marginRight="0.5dp" />

        <RadioButton
            android:id="@+id/radioButton9"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="気ままに"
            android:button="@null"
            android:drawableTop="@drawable/relax"
            android:background="@drawable/radio_button"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:layout_marginLeft="0.5dp"
            android:layout_marginRight="0.5dp" />

        <RadioButton
            android:id="@+id/radioButton10"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="気晴らし"
            android:button="@null"
            android:drawableTop="@drawable/drink"
            android:background="@drawable/radio_button"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:layout_marginLeft="0.5dp"
            android:layout_marginRight="1dp" />
    </RadioGroup>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="検索"
        android:textSize="20dp"
        android:id="@+id/button_search"
        android:layout_span="2"
        android:background="@drawable/button_round"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />
</LinearLayout>
