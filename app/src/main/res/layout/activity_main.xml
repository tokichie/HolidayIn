<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="jp.icecreamparfait.intern.cyberagent.holidayin.Activities.MainActivity">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/holidayin" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="32dp"
        android:text="@string/no_login"
        android:id="@+id/button_nologin"
        android:layout_above="@+id/button_login"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/button_round"
        android:textColor="@color/wallet_holo_blue_light"
        android:layout_marginBottom="15dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="32dp"
        android:drawableLeft="@drawable/foursquare_icon"
        android:text="@string/login_with_4sq"
        android:id="@+id/button_login"
        android:layout_marginBottom="40dp"
        android:textColor="@color/wallet_holo_blue_light"
        android:background="@drawable/button_round"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
